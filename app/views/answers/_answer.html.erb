<%= tag.article class: 'mb-3 card', id: dom_id(answer) do %>
  <div class="card-body">
    <section class="card-text">
      <small><time datetime="<%= answer.formatted_created_at %>">
        <%= answer.formatted_created_at %>
      </time></small>

      <div class="mt-2 mb-3">
        <%= sanitize answer.body %>
      </div>
    </section>

    <%= link_to 'Изменить Всё', edit_question_answer_path(question, answer),
                class: 'btn btn-info btn-sm' %>
    <%= link_to 'Удалить', question_answer_path(question, answer), class: 'btn btn-danger btn-sm',
                data: {method: :delete, confirm: "Вы уверены?"} %>
  </div>
<% end %>
