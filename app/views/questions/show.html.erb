<% provide :page_title, @question.title %>
<% currently_at 'Questions' %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<div class="btn-group">
<%= link_to 'Показать', question_path(@question), class: 'btn btn-primary' %> |
<%= link_to 'Изменить', edit_question_path(@question), class: 'btn btn-secondary' %> |
<%= link_to 'Удалить', question_path(@question), class: 'btn btn-danger',
            data: {method: :delete, confirm: 'Вы уверены?'} %>
</div>

<hr class="my-3">

<h2 class="mb-3">Напишите свой ответ</h2>

<%= render 'answers/form' %>

<h2 class="mt-5">Ответы</h2>

<%= paginate @answers %>

<%= render partial: 'answers/answer', collection: @answers,
           as: :answer, locals: {question: @question} %>

<%= paginate @answers %>
