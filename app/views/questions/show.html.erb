<% provide :page_title, @question.title %>
<% currently_at 'Questions' %>


<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<div class="btn-group">
<%= link_to 'Показать', question_path(@question), class: 'btn btn-primary' %> |
<%= link_to 'Изменить', edit_question_path(@question), class: 'btn btn-secondary' %> |
<%= link_to 'Удалить', question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Вы уверены?'} %>
</div>

<hr class="my-3">

<h2 class="mb-3">Напишите свой ответ</h2>

<%= render 'answers/form' %>

<h2 class="mt-5">Ответы</h2>

<% @answers.each do |answer| %>
  <article class="mb-3 card">
    <div class="card-body">
      <section class="card-text">
        <small><time datetime="<%= answer.formatted_created_at %>">
          <%= answer.formatted_created_at %>
        </time></small>

        <p class="mt-2 mb-3">
          <%= answer.body %>
        </p>
      </section>

      <%= link_to 'Изменить', edit_question_answer_path(@question, answer),
                  class: 'btn btn-info btn-sm' %>
      <%= link_to 'Удалить', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
                  data: {method: :delete, confirm: "Are you sure?"} %>
    </div>
  </article>
<% end %>
