<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to 'Показать', question_path(@question), class: 'btn btn-primary' %> |
<%= link_to 'Изменить', edit_question_path(@question), class: 'btn btn-secondary' %> |
<%= link_to 'Удалить', question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Вы уверены?'} %>

<hr class="my-3">

<h2>Напишите свой ответ</h2>

<%= render 'shared/errors', object: @answer %>
<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Отправить ответ!", class: 'btn btn-primary' %>
<% end %>

<h2 class="mt-5">Ответы</h2>

<% @answers.each do |answer| %>
  <article class="mb-3">
    <time datetime="<%= answer.formatted_created_at %>">
      <%= answer.formatted_created_at %>
    </time>

    <p>
      <%= answer.body %>
    </p>

    <%= link_to 'Удалить', question_answer_path(@question, answer), class: 'btn btn-danger btn-xs',
                data: {method: :delete, confirm: "Are you sure?"} %>
  </article>
<% end %>
